<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/defaultWindowColor</item>
    </style>

    <style name="parentLayoutPaddingStyle">
        <item name="android:paddingLeft">@dimen/baseLayoutLeftPadding</item>
        <item name="android:paddingTop">@dimen/baseLayoutTopPadding</item>
        <item name="android:paddingRight">@dimen/baseLayoutRightPadding</item>
    </style>

    <style name="bottomLayoutStyle">
        <item name="android:background">@drawable/shadow_r12_s6_wh200_ltr</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="backBtnStyle">
        <item name="android:layout_width">@dimen/backBtnWidthHeight</item>
        <item name="android:layout_height">@dimen/backBtnWidthHeight</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">centerInside</item>
    </style>


    <style name="introTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/introIconWidthHeight</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/personal_info_textSize_16sp</item>
        <item name="font_path">@string/THP_FiraSans_Bold</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">@dimen/introTextMarginTop</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:alpha">0.8</item>
    </style>

    <style name="nextBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">centerInside</item>
        <!--<item name="android:src">@drawable/ic_next_arrow</item>-->
        <item name="srcCompat">@drawable/ic_next_arrow</item>
    </style>

    <style name="introIconStyle">
        <item name="android:layout_width">@dimen/introIconWidthHeight</item>
        <item name="android:layout_height">@dimen/introIconWidthHeight</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginTop">@dimen/introIconMarginTop</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@string/THP_TundraOffc_Bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="editTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/signInAndUp_editText_height</item>
        <item name="android:background">@drawable/et_background</item>
        <item name="android:alpha">0.6</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="errorTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:text">Error message</item>
        <item name="android:maxLines">2</item>
        <item name="android:alpha">0.6</item>
        <item name="android:visibility">gone</item>
        <item name="android:textColor">@color/redColor_1</item>
        <item name="font">@string/THP_FiraSans_Regular</item>
    </style>

    <style name="errorTextStyleChangePassword" parent="errorTextStyle">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:maxLines">5</item>
    </style>


    <style name="btnTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/signInAndUp_editText_height</item>
        <item name="android:background">@drawable/blue_backgraoud</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="font_path">@string/THP_FiraSans_SemiBold</item>
        <item name="android:textSize">@dimen/personal_info_textSize_14sp</item>
    </style>
    <style name="gray_background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/signInAndUp_editText_height</item>
        <item name="android:background">@drawable/gray_background_resend</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="font_path">@string/THP_FiraSans_SemiBold</item>
        <item name="android:textSize">@dimen/personal_info_textSize_14sp</item>
    </style>


    <style name="btnTextStyleWhiteBG">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/subscribe_plan_btn_height</item>
        <item name="android:background">@drawable/white_backgraoud</item>
        <item name="android:textColor">#6b91fc</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="font_path">@string/THP_FiraSans_Bold</item>
        <item name="android:textSize">@dimen/personal_info_textSize_14sp</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/boldBlackColor_50alp</item>
        <item name="colorControlNormal">@color/listing_dividerColor</item>
        <item name="colorControlActivated">@color/boldBlackColor_50alp</item>
        <item name="font_path">@string/THP_FiraSans_Regular</item>
    </style>

    <style name="TextLabelDark" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/dark_color_static_text</item>
        <item name="colorControlNormal">@color/listing_dividerColor</item>
        <item name="colorControlActivated">@color/dark_color_static_text</item>
        <item name="font_path">@string/THP_FiraSans_Regular</item>
    </style>

    <style name="accountInfoET_Style">
        <item name="android:layout_height">@dimen/account_info_et_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/personal_info_textSize_16sp</item>
        <item name="font_path">@string/THP_FiraSans_Regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/boldBlackColor_50alp</item>
        <item name="android:alpha">0.9</item>
        <item name="android:lineSpacingExtra">0.8sp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="personalInfoET_Style">
        <item name="android:layout_height">@dimen/personal_info_et_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/personal_info_textSize_16sp</item>
        <item name="font_path">@string/THP_FiraSans_Regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/boldBlackColor</item>
        <item name="android:alpha">0.9</item>
        <item name="android:lineSpacingExtra">0.8sp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:paddingBottom">@dimen/personal_info_et_paddingBottom</item>
    </style>

    <style name="addAddressET_Style">
        <item name="android:layout_height">@dimen/add_address_et_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/personal_info_textSize_16sp</item>
        <item name="font_path">@string/THP_FiraSans_Regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/boldBlackColor</item>
        <item name="android:alpha">0.9</item>
        <item name="android:lineSpacingExtra">0.8sp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:paddingBottom">@dimen/personal_info_et_paddingBottom</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">@dimen/personal_info_textSize_16sp</item>
    </style>

    <style name="HintLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/personal_info_textSize_16sp</item>
        <item name="font_path">@string/THP_FiraSans_Bold</item>
        <item name="android:fontFamily">@string/THP_TundraOffc_Italic</item>
    </style>

    <style name="fwdBtnStyle">
        <item name="android:layout_width">@dimen/backBtnWidthHeight</item>
        <item name="android:layout_height">@dimen/backBtnWidthHeight</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">centerInside</item>
        <!--<item name="android:src">@drawable/ic_right_s</item>-->
        <item name="srcCompat">@drawable/ic_right_s</item>
    </style>
    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#1b528e</item>
    </style>


    <dimen name="error_text_height">30dp</dimen>


    <style name="GNowProgressBar" parent="SmoothProgressBar">
        <item name="spb_stroke_separator_length">8dp</item>
        <item name="spb_sections_count">2</item>
        <item name="spb_speed">1.7</item>
        <item name="spb_progressiveStart_speed">2</item>
        <item name="spb_progressiveStop_speed">3.4</item>
        <item name="spb_interpolator">spb_interpolator_acceleratedecelerate</item>
        <item name="spb_mirror_mode">true</item>
        <item name="spb_reversed">true</item>
        <item name="spb_colors">@array/gplus_colors</item>
        <item name="spb_progressiveStart_activated">true</item>
        <item name="spb_generate_background_with_colors">false</item>
    </style>

    <style name="progressDialogLight" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons and Progressbar -->
        <item name="colorAccent">@color/blueColor_1</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background -->
        <item name="android:background">@color/progressDialogLight</item>
    </style>


    <style name="progressDialogDark" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons and Progressbar -->
        <item name="colorAccent">@color/blueColor_1</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background -->
        <item name="android:background">@color/progressDialogDark</item>
    </style>


</resources>
