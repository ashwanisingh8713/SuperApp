<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/moreTabLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/apptab_listing_left_padding"
        android:paddingStart="@dimen/apptab_listing_left_padding"
        android:paddingEnd="@dimen/apptab_listing_right_padding"
        android:paddingRight="@dimen/apptab_listing_right_padding"
        android:paddingTop="@dimen/apptab_listing_top_padding"
        >

        <com.ns.view.text.CustomTextView
            android:id="@+id/suggested_Txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/optionTxtColor"
            android:gravity="left|center_vertical"
            android:text="Bookmarks"
            android:layout_marginTop="20dp"
            app:font_path="@string/THP_FiraSans_Regular"
            android:drawableLeft="@drawable/tab_bookmarks_unselected"
            android:drawableRight="@drawable/ic_next_arrow"
            android:drawablePadding="10dp"
            />

        <include
            layout="@layout/listing_divider"
            android:id="@+id/horizontalDivider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/listing_divider_height"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            />

        <com.ns.view.text.CustomTextView
            android:id="@+id/personalise_Txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/optionTxtColor"
            android:gravity="left|center_vertical"
            android:text="Personalise"
            app:font_path="@string/THP_FiraSans_Regular"
            android:drawableLeft="@drawable/ic_tab_dashboard_unselected"
            android:drawableRight="@drawable/ic_next_arrow"
            android:drawablePadding="10dp"
            />

        <include
            layout="@layout/listing_divider"
            android:id="@+id/horizontalDivider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/listing_divider_height"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>