<?xml version="1.0" encoding="utf-8"?>
<com.ns.view.layout.NSLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_explore_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/explore_column_margin_right"
    android:layout_marginRight="@dimen/explore_column_margin_right"
    android:background="@drawable/dark_drawable_explore_border"
    app:layoutType="Black_Dark">

    <LinearLayout
        android:layout_width="165dp"
        android:layout_height="138dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview_explore_section"
            android:layout_width="match_parent"
            android:layout_height="@dimen/explore_column_image_newheight"
            android:src="@drawable/ph_exploresections_th" />

        <com.ns.view.text.ArticleTitleTextView
            android:id="@+id/textview_explore_section"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|bottom"
            android:layout_margin="@dimen/explore_column_text_padding"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingTop="1dp"
            android:singleLine="true"
            app:font_path="@string/THP_FiraSans_Regular"
            android:textSize="12sp" />
    </LinearLayout>

</com.ns.view.layout.NSLinearLayout>