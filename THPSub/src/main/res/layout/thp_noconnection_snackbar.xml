<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <Button
        android:id="@+id/action_button"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/thp_ic_settings_wrapper" />

    <TextView
        android:id="@+id/snackbar_textMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/action_button"
        android:layout_alignBottom="@id/action_button"
        
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:layout_toLeftOf="@id/action_button"
        android:singleLine="true"
        android:text="@string/no_internet_connection"
        android:textColor="#8a8a8a"
        android:textSize="18sp" />


</RelativeLayout>