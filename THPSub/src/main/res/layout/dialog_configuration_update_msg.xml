<?xml version="1.0" encoding="utf-8"?>
<com.ns.view.layout.NSFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp">

        <com.ns.view.text.ArticleTitleTextView
            android:id="@+id/dialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Hindu"
            android:textSize="@dimen/personal_info_textSize_16sp"
            app:font_path="@string/THP_FiraSans_SemiBold"
            app:textType="M" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.ns.view.THP_AutoResizeWebview
                android:id="@+id/dialogMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40dp"
                android:minHeight="250dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:gravity="right"
                android:orientation="horizontal">

                <com.ns.view.text.CustomTextView
                    android:id="@+id/cancelTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="Cancel"
                    android:textColor="@color/color_1b528e"
                    android:textSize="14sp"
                    app:font_path="@string/THP_FiraSans_SemiBold" />

                <com.ns.view.text.CustomTextView
                    android:id="@+id/okTxt"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="Agree"
                    android:textSize="14sp"
                    app:font_path="@string/THP_FiraSans_SemiBold"
                    app:textColor="@color/color_1b528e" />

            </LinearLayout>
        </FrameLayout>


    </LinearLayout>

</com.ns.view.layout.NSFrameLayout>