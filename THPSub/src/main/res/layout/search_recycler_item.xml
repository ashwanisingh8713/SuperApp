<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.ns.view.text.ArticleTitleTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        app:font_path="@string/THP_FiraSans_SemiBold"
        android:maxLines="3"
        android:minLines="3"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/search_title"
        android:textSize="14sp"
        app:viewType="M"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.ns.view.text.ArticleTitleTextView
            android:id="@+id/sectionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:font_path="@string/THP_FiraSans_Regular"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/text_warm_grey"
            android:textSize="12sp" />

        <com.ns.view.text.CustomTextView
            android:id="@+id/publish_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_dot"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_dot"
            android:fontFamily="sans-serif"
            android:paddingRight="10dp"
            app:textColor="@color/text_warm_grey"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/article_list_bottom" />
</LinearLayout>