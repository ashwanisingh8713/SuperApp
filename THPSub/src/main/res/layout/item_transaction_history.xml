<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="15dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemContentMainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="31dp"
        android:paddingStart="31dp"
        android:paddingEnd="31dp"
        android:paddingRight="31dp"
        android:paddingTop="16dp"
        android:paddingBottom="20dp"
        android:background="@drawable/shadow_r10_s3_wh200"
        >

        <com.ns.view.text.ArticleTitleTextView
            android:id="@+id/orderId_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="16sp"
            android:text="TH1987F635"
            app:textType="M"
            android:alpha="0.8"
            app:font_path="@string/THP_FiraSans_Bold"
            />

        <com.ns.view.text.ArticleTitleTextView
            android:id="@+id/date_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/orderId_Txt"
            android:textSize="13sp"
            android:layout_marginTop="6dp"
            app:textType="M"
            android:text="Feb 15, 2019 at 8:05 pm"
            android:alpha="0.6"
            app:font_path="@string/THP_FiraSans_Regular"
            />

        <include layout="@layout/listing_divider"
            android:id="@+id/divider1"
            android:layout_width="0dp"
            android:layout_height="@dimen/listing_divider_height"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date_Txt"
            android:layout_marginTop="20dp"
            />

        <com.ns.view.text.CustomTextView
            android:id="@+id/planName_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider1"
            android:textSize="16sp"
            android:layout_marginTop="6dp"
            app:textColor="@color/yellowColor_1"
            android:text="Plan Name"
            app:font_path="@string/THP_FiraSans_Regular"
            />

        <com.ns.view.text.ArticleTitleTextView
            android:id="@+id/price_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/planName_Txt"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            app:textType="M"
            android:text="Rs. 399"
            app:font_path="@string/THP_FiraSans_Regular"
            />

        <include layout="@layout/listing_divider"
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="@dimen/listing_divider_height"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/price_Txt"
            android:layout_marginTop="20dp"
            />


        <com.ns.view.text.ArticleTitleTextView
            android:id="@+id/statusTitle_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider2"
            android:textSize="13sp"
            android:layout_marginTop="14dp"
            app:textType="M"
            android:text="Status"
            app:font_path="@string/THP_FiraSans_Regular"
            />

        <com.ns.view.text.ArticleTitleTextView
            android:id="@+id/paymentModeTitle_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider2"
            android:textSize="13sp"
            android:layout_marginTop="14dp"
            app:textType="M"
            android:text="Payment Mode"
            app:font_path="@string/THP_FiraSans_Regular"
            />

        <com.ns.view.text.CustomTextView
            android:id="@+id/status_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/statusTitle_Txt"
            android:textSize="16sp"
            android:layout_marginTop="6dp"
            app:textColor="@color/green"
            android:text="Success"
            app:font_path="@string/THP_FiraSans_Regular"
            />

        <com.ns.view.text.CustomTextView
            android:id="@+id/paymentMode_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/paymentModeTitle_Txt"
            app:layout_constraintTop_toBottomOf="@+id/paymentModeTitle_Txt"
            android:textSize="16sp"
            android:layout_marginTop="6dp"
            app:textColor="@color/red"
            android:text="ICICI"
            app:font_path="@string/THP_FiraSans_Regular"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>