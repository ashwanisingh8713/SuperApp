<?xml version="1.0" encoding="utf-8"?>
<com.ns.view.layout.NSLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layoutType="Black_Dark">

    <com.ns.view.btn.NSImageButton
        android:id="@+id/backBtn"
        style="@style/backBtnStyle"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        app:btnType="arrow_no_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.ns.view.text.ArticleTitleTextView
        android:id="@+id/pageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="@string/text_title_plan_page"
        android:textSize="@dimen/textSize_27sp"
        app:font_path="@string/THP_TundraOffc_Bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backBtn"
        app:textType="M" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <WebView
            android:id="@+id/webViewRecoPlans"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.ns.view.CustomProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </FrameLayout>
</com.ns.view.layout.NSLinearLayout>